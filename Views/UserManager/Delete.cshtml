@model Serwis.Models.UserManagerModel

@{
    ViewData["Title"] = "Usuń użytkownika";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5 text-center">
                    <h2 class="text-danger">🗑️ Usuń użytkownika</h2>
                    <p class="mb-4">Czy na pewno chcesz usunąć tego użytkownika?</p>

                    <div class="card bg-light p-3 mb-4 text-start">
                        <p><strong>🆔 ID:</strong> @Model.Id</p>
                        <p><strong>📧 Email:</strong> @Model.Email</p>
                        <p><strong>👤 Nazwa użytkownika:</strong> @Model.UserName</p>
                        <p><strong>🔑 Role:</strong> @string.Join(", ", Model.Roles)</p>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger w-50">❌ Usuń</button>
                            <a asp-action="Index" class="btn btn-secondary w-50">🔙 Anuluj</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
